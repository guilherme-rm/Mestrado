{
  "//": "Configuration for RL Optimization (opt.json)",
  "nagents": 5,
  
  "//_RL_HYPERPARAMETERS": "",
  "learning_rate": 0.0005,
  "gamma": 0.99,
  "batch_size": 128,
  "tau": 0.005,

  "//_REPLAY_MEMORY": "",
  "capacity": 50000,
  "min_memory_for_learning": 2000,

  "//_EXPLORATION": "",
  "eps_start": 1.0,
  "eps_end": 0.05,
  "eps_decay_steps": 50000,
  "action_strategy": "epsilon_greedy",


  "//_TRAINING_DURATION": "",
  "nepisodes": 25000,
  "nsteps": 50,

  "//_MISC": "",
  "early_termination": true,
  "cuda": 0,

  "//_LOGGING_PLOTTING": "",
  "enable_plot": true,
  "plot_interval": 5,
  "plot_smooth_window": 50,
  "plot_x_axis": "episodes",
  "checkpoint_interval": 100,
  "step_log_throttle": 10
}
